<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio.MainPage">

    <Border Stroke="Aqua" BackgroundColor="LightGrey" StrokeThickness="4" StrokeShape="RoundRectangle 40 , 40,0,0">
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Button
              x:Name="Boton1"
              Text="Click me" 
              HorizontalOptions="Center"
              BackgroundColor="AliceBlue"
              BorderColor="Black"
              BorderWidth="2" MaximumWidthRequest="1000" />

            <Button
              x:Name="Boton2"
              Text="Click me" 
              HorizontalOptions="Center"
              BackgroundColor="AliceBlue" MaximumWidthRequest="1000" />

            <Button
              x:Name="Boton3"
              Text="Click me" 
              HorizontalOptions="Center"
              BackgroundColor="AliceBlue" MaximumWidthRequest="1000"/>

            <HorizontalStackLayout
                Spacing="10"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="300">

                <Label  
                    Text="Introduce nombre" 
                    TextColor="Black"
                    HorizontalOptions="FillAndExpand" />

                <Entry  
                    x:Name="nombre"     
                    HorizontalOptions="FillAndExpand"  
                    BackgroundColor="AliceBlue" 
                    TextColor="Black" MinimumWidthRequest="500"/>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Border>

</ContentPage>
